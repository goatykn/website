---
import { getTagInfo } from "../utils/tag-info";

interface Props {
  tagCounts: Map<string, number>;
}

const { tagCounts } = Astro.props;
---

<div class="grid grid-cols-2 gap-4 sm:grid-cols-4">
  {
    [...tagCounts].map(([tag, count]) => {
      const tagInfo = getTagInfo(tag);
      return (
        <a href={`/tags/${tag}`}>
          <div class="relative flex flex-col items-center rounded-2xl bg-gray-200 p-6 transition-all hover:scale-105 hover:bg-gray-300/90 dark:bg-gray-800 dark:hover:bg-gray-100/10">
            <span class="absolute top-3 right-3 flex h-8 w-8 items-center justify-center rounded-full bg-gray-500 text-sm font-bold text-gray-50 dark:bg-gray-400 dark:text-gray-900">
              {count}
            </span>
            <tagInfo.icon class="h-24 w-24" />
            <h3 class="pt-2 text-xl font-semibold">{tagInfo.label}</h3>
          </div>
        </a>
      );
    })
  }
</div>
