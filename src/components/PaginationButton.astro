---
import NavigationButton from "./NavigationButton.astro";

interface Props {
  prevUrl: string | undefined;
  nextUrl: string | undefined;
}

const { prevUrl, nextUrl } = Astro.props;
---

<div class="flex">
  {
    prevUrl ? (
      <NavigationButton href={prevUrl}>← Previous page</NavigationButton>
    ) : (
      <div class="flex-1" />
    )
  }
  {
    nextUrl ? (
      <NavigationButton href={nextUrl}>Next page →</NavigationButton>
    ) : (
      <div class="flex-1" />
    )
  }
</div>
